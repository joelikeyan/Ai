# Multimodal AI System Environment Configuration
# Copy this file to .env and modify as needed

# Audio Settings
TTS_VOICE_ID=          # Leave empty for default voice
TTS_RATE=200           # Speech rate (words per minute)
TTS_VOLUME=0.9         # Volume level (0.0 to 1.0)

# Model Settings
LLM_MODEL=llama3.1:8b  # Ollama model name
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
IMAGE_MODEL=microsoft/git-base-coco
DEVICE=auto            # auto, cpu, cuda, mps

# UI Settings
HOST=0.0.0.0          # Host to bind to
PORT=8000             # Port to run on
DEBUG=false           # Enable debug mode
AUTO_SPEAK=true       # Auto-speak responses
AUTO_PLAY_AUDIO=true  # Auto-play audio files
THEME=dark            # dark or light

# System Settings
LOG_LEVEL=INFO        # Logging level
MAX_FILE_SIZE=52428800 # Max file size in bytes (50MB)